#!groovy

import hudson.model.Result
import groovy.json.*

  pipeline {
    agent any
    tools {
      nodejs "nodejs"
    }
    environment {
      TEXTISSUE = "${params.TextIssue}"
    }

    stages {
      stage('Crear Issue') {
        steps {
	  sh "chmod +x -R ${env.WORKSPACE}"
          sh "TEXT='$TEXTISSUE' ./CreateIssue.sh TEXT" 
      }
    }

    stage('Build') {
      environment {
        log = readJSON file: 'log.txt'
        IRLOG = "${log.key}"
      }
      steps {
        echo "$log"
        echo "$IRLOG"
        sh "IR=$IRLOG ./Attachment.sh IR"
      }
    }
  }
}
